<%= render "layouts/navbar" %>

<main class="h-100">
  <div class="w-full w-100 d-flex justify-content-center mt-5">
    <h1 class="dp-title dp-title__large bold">Todays News</h1>
  </div>

  <div class="w-100 mw-sm mx-auto px-3 h-100 mt-5">
    <% if @news.empty? %>
      <p>No news to read</p>
    <% else %>
      <p>You will read some news in a few</p>
    <% end %>
  </div>
</main>