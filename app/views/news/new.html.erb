<%= javascript_pack_tag 'tiny_mce' %>

<%= render 'layouts/navbar' %>

<main class="w-full mt-5">
  <h1 class="dp-subtitle w-full mx-auto mw-md px-3 text-center mb-5">Create a new publication</h1>


  <%= form_with url: publications_new_url, method: :post, id: "new-article", local: false do | form | %>
    <div class="w-100 mw-lg mx-auto px-3 mb-4 d-flex flex-column justify-content-start">
      <label class="form-label d-flex flex-column mb-3">
        <span>Title</span>
        <input type="text" name="publication[title]" class="form-control" />
      </label>

      <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" name="publication[published]" id="published-check">
        <label class="form-check-label" for="published-check">
          Published
        </label>
      </div>

      <label class="form-label d-flex flex-column mb-3">
        <span>Reading time</span>
        <input type="text" name="publication[reading_time]" class="form-control" placeholder="How long will users take to read your article? (Ex.: 2 minutes)" />
        <span class="form-text">Leave it blank if don't want to include this information</span>
      </label>
    </div>

    <div class="w-100 mx-auto mw-lg px-3">
      <textarea id="content-editor" name="publication[content]"></textarea>
    </div>

    <div class="w-100 mw-lg mx-auto d-flex justify-content-end align-items-center px-3 mt-5">
      <button type="submit" class="btn btn-dark">Save</button>
    </div>
  <% end %>
</main>

